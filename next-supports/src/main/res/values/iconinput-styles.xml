<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Icon Input View-->

    <style name="NextIconInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
    </style>

    <style name="NextIconInput.Icon" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="NextIconInput.Input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:hint">HINT NOT SET</item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <declare-styleable name="NextIconInput">
        <attr name="android:imeOptions"/>
        <attr name="android:inputType"/>
        <attr name="android:hint"/>
        <attr name="android:icon"/>
    </declare-styleable>

</resources>