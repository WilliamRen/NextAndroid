<?xml version="1.0" encoding="utf-8"?>
<resources>

    <dimen name="NextLabelCellHeight">60dp</dimen>

    <style name="NextLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/NextLabelCellHeight</item>
    </style>

    <style name="NextLabel.Label">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">@dimen/NextLabelCellHeight</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#525252</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="NextLabel.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/NextLabelCellHeight</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">6dp</item>
        <item name="android:textColor">#525252</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <declare-styleable name="NextLabel">
        <attr name="android:text"/>
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
        <attr name="labelText" format="reference|string"/>
        <attr name="labelColor" format="reference|color"/>
        <attr name="labelSize" format="reference|dimension"/>
        <attr name="labelPadding" format="reference|dimension"/>
        <attr name="labelPaddingLeft" format="reference|dimension"/>
        <attr name="labelPaddingTop" format="reference|dimension"/>
        <attr name="labelPaddingRight" format="reference|dimension"/>
        <attr name="labelPaddingBottom" format="reference|dimension"/>
    </declare-styleable>

</resources>